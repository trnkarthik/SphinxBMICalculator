<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="450dp"
    android:background="@drawable/background"
    android:padding="10dp"
    tools:context=".BMIActivity"
    android:id="@+id/BMIResultFullLayout">

    <RelativeLayout
        android:id="@+id/BMIResultLayout"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
		android:paddingBottom="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_corners_white" >

        <TextView
            android:id="@+id/BMIResultTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/BMIResultTitle"
            android:padding="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="30dp"
            android:textColor="#662a25"/>
        
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/BMIResultTextLayout"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_corners_white"
            android:layout_below="@+id/BMIResultLayout"
            android:layout_centerHorizontal="true">

        <TextView
                android:id="@+id/BMIResultComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/BMIResultTitle"
                android:padding="10dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textSize="14dp"/>



    </RelativeLayout>

    <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="@string/ShareBMI"
            android:id="@+id/shareBigButton"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="21dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/custom_button"
            android:textStyle="bold"
            android:clickable="false"
            android:longClickable="false"
            android:textSize="16sp"
            />

    <ImageView
            android:layout_width="65dp"
            android:layout_height="140dp"
            android:contentDescription="@string/blankDesc"
            android:id="@+id/bmiImage"
            android:background="@drawable/m3"
            android:layout_above="@+id/shareBigButton"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="25dp"/>

</RelativeLayout>